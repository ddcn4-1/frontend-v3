{
  "name": "ddcn41-frontend-monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.15.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:accounts": "turbo run dev --filter=accounts",
    "dev:client": "turbo run dev --filter=client",
    "dev:admin": "turbo run dev --filter=admin",
    "build": "turbo run build",
    "build:accounts": "turbo run build --filter=accounts",
    "build:client": "turbo run build --filter=client",
    "build:admin": "turbo run build --filter=admin",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json,md}\" \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json,md}\" \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "quality:check": "pnpm format:check --write && pnpm lint && pnpm security:check && pnpm type-check",
    "security:check": "pnpm audit:check",
    "audit:check": "pnpm audit --audit-level=moderate",
    "audit:fix": "pnpm audit fix",
    "sonar:up": "docker compose -f ../docker-compose.sonar.yml up -d",
    "sonar:down": "docker compose -f ../docker-compose.sonar.yml down",
    "fsd:check": "pnpm fsd:check:client && pnpm fsd:check:admin && pnpm fsd:check:accounts",
    "fsd:check:client": "pnpm --filter @apps/client exec -- steiger src",
    "fsd:check:admin": "pnpm --filter @apps/admin exec -- steiger src",
    "fsd:check:accounts": "pnpm --filter @apps/accounts exec -- node ../../scripts/run-steiger.cjs src",
    "fsd:check:apps": "steiger apps",
    "fsd:check:packages": "steiger packages"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@feature-sliced/eslint-config": "^0.1.1",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@types/node": "^22.18.9",
    "@typescript-eslint/eslint-plugin": "^8.21.1",
    "@typescript-eslint/parser": "^8.21.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.0.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "^3.6.2",
    "sonarqube-scanner": "^4.3.2",
    "steiger": "^0.5.11",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.1"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "amazon-cognito-identity-js": "^6.3.15",
    "zod": "^4.1.11"
  }
}
