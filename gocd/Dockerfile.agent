FROM gocd/gocd-agent-ubuntu-22.04:v24.4.0

# Switch to root to install packages
USER root

# Install Node.js 22 and AWS CLI
RUN apt-get update && \
    apt-get install -y curl ca-certificates gnupg unzip bc jq && \
    mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg && \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_22.x nodistro main" | tee /etc/apt/sources.list.d/nodesource.list && \
    apt-get update && \
    apt-get install -y nodejs && \
    curl "https://awscli.amazonaws.com/awscli-exe-linux-aarch64.zip" -o "awscliv2.zip" && \
    unzip awscliv2.zip && \
    ./aws/install && \
    rm -rf aws awscliv2.zip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Enable corepack and install pnpm
RUN corepack enable && \
    corepack prepare pnpm@9.15.0 --activate

# Verify installation
RUN node --version && npm --version && pnpm --version && aws --version

# Switch back to go user
USER go

# Set working directory
WORKDIR /go
